<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random);">
  <div class="container">
    <h1>The new IMDB</h1>
    <h2>The best <strong>movie listing</strong> website !</h2>
    <p>Store and comment your films in lists.</p>
    <a class="btn btn-flat" href="new">Create your list</a>
  </div>
</div>

<div>
  <ul class="list-inline">
  <% @lists.each do |list| %>
  <% i=0 %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/<%=i+=1%>)">
      <li class= "link"><%= link_to list.name, list_path(list), class: "btn btn-flat" %> | <%= link_to "delete list", list_path(list), method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn btn-flat" %> </li>
    </div>
  <% end %>
  </ul>
</div>

